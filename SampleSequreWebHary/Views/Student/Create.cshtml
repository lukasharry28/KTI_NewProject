@model SampleSequreWebHary.Models.Student

<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nim" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Nim" class="form-control" />
                <span asp-validation-for="Nim" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FullName" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <input type="submit" class="btn btn-primary btn-sm" value="Create" />
            </div>
        </div>
    </div>
</form>
