@model SecureWeb.Models.Student

<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="nim" class="col-md-2 control-label">NIM</label>
            <div class="col-md-6">
                <input asp-for="nim" class="form-control" />
                <span asp-validation-for="nim" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="name" class="col-md-2 control-label">Nama</label>
            <div class="col-md-6">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <input type="submit" class="btn btn-primary btn-sm" value="Create" />
            </div>
        </div>
    </div>
</form>